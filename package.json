{
  "private": true,
  "devDependencies": {
    "autoprefixer": "^10.4.19",
    "cssnano": "^6.0.1",
    "postcss": "^8.4.35",
    "postcss-cli": "^11.0.1",
    "sass": "^1.77.0"
  },
  "scripts": {
    "scss": "sass assets/scss/app.scss public/_/css/app.css --no-source-map",
    "postcss": "postcss public/_/css/app.css -u autoprefixer cssnano -o public/_/css/app.min.css",
    "build:css": "npm run scss && npm run postcss"
  }
}
